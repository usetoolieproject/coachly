# Defaults to 'supabase' if not set
DB_TYPE=supabase

# MongoDB Configuration (for local development)
# Only used when DB_TYPE=mongodb
MONGODB_URI=mongodb://localhost:27017/trainr

# Supabase Configuration (for production)
# Used when DB_TYPE=supabase or when MongoDB connection fails
VITE_SUPABASE_URL=https://sguavpabcxeppkgwdssl.supabase.co
SUPABASE_URL=https://sguavpabcxeppkgwdssl.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

